<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CarShare"

        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".MainActivity"
            android:label="CarShare"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".HomeActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".RideActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".AddRideActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".AdminActivityRide"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".PaymentActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".AdminPaymentActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".AddPaymentActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".StatisticActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".RefuelingActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".AdminRefuelingActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity android:name=".AddRefuelingActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

    </application>
</manifest>